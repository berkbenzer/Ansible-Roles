# templates/krb5.conf.j2
[logging]
  default = FILE:/var/log/krb5libs.log
  kdc = FILE:/var/log/krb5kdc.log
  admin_server = FILE:/var/log/kadmind.log

[libdefaults]
  default_realm = {{ ad_realm}}
  dns_lookup_realm = false
  dns_lookup_kdc = true
  ticket_lifetime = 24h
  renew_lifetime = 7d
  forwardable = true

[realms]
  {{ ad_realm }} = {
  }

[domain_realm]
 {{ ad_domain }} = {{ ad_realm }}
 .{{ ad_domain }} = {{ ad_realm }}
